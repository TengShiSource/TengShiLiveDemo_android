<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/sp_15"
            android:text="房间号："/>

        <EditText
            android:id="@+id/roomid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"
            android:text="1211"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/sp_15"
            android:text="昵称："/>
        <EditText
            android:id="@+id/nickname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"
            android:text="你好"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_classname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/sp_15"
            android:text="课节名称："/>
        <EditText
            android:id="@+id/classname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"
            android:text="测试1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/sp_15"
            android:text="手机号："/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"
            android:text="15688960655"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_teacherpd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/sp_15"
            android:text="教师密码："/>
        <EditText
            android:id="@+id/teacherpd"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"
            android:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_studentpd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/sp_15"
            android:text="学生密码："/>
        <EditText
            android:id="@+id/studentpd"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"
            android:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_verifycode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/dp_85"
            android:layout_height="0dp"/>
        <EditText
            android:id="@+id/et_verifycode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_edittext"/>
        <TextView
            android:id="@+id/verifycode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:background="@drawable/green_track"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:text="获取验证码"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老师"
            android:textSize="16sp"
            android:textColor="@color/colorBlack" />
        <RadioButton
            android:id="@+id/rb_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center">
        <Button
            android:id="@+id/join"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:background="@drawable/green_track"
            android:textColor="@color/colorWhite"
            android:text="进入直播间"/>
    </LinearLayout>


</LinearLayout>