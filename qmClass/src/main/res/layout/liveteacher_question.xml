<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/livebg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/yincang"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@mipmap/fanyeright"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课堂答疑"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/holo_button_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/unanswered"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_unanswered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未解答"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_13"/>
            <View
                android:id="@+id/view_unanswered"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/textGreen"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/answered"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_answered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已解答"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_13"/>
            <View
                android:id="@+id/view_answered"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/textGreen"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:columnWidth="@dimen/dp_90"
            android:numColumns="3"
            android:verticalSpacing="@dimen/dp_5"
            android:horizontalSpacing="@dimen/dp_5"
            android:stretchMode="columnWidth"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            android:fastScrollEnabled="true"
            android:fadingEdge="none"
            android:fadingEdgeLength="10dp"
            android:stackFromBottom="false"
            android:transcriptMode="alwaysScroll"
            android:drawSelectorOnTop="false"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
