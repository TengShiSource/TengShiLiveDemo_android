<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/livecolorBack"
        android:layout_height="@dimen/dp_85">
        <com.qm.qmclass.tencent.TICVideoRootView
            android:id="@+id/student_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:text="李佳佳"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_11"/>
        <RelativeLayout
            android:id="@+id/s_rl_tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@mipmap/videotool"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/s_shouqi"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/video_right_bg">
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/fanyeright"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/s_ll_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/s_shouqi"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/s_video_huabi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@mipmap/huabi"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/s_video_lanmai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_lanmai"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/guamai"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/s_video_quanping"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@mipmap/quanping"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>