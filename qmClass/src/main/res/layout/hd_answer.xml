<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/livebg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/choice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择题"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"/>
                <View
                    android:id="@+id/view_choice"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/textGreen"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/judgment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_judgment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="判断题"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"/>
                <View
                    android:id="@+id/view_judgment"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/textGreen"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@mipmap/close"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/holo_button_normal"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击字母设置正确答案，支持多选"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_3"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionA"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="A"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionB"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="B"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionC"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="C"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionD"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="D"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionE"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="E"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionF"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="F"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionG"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="G"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/optionH"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:text="H"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center"
                            android:background="@drawable/circle_darkgary_bg"
                            android:visibility="invisible"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addorreduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:padding="@dimen/dp_10"
                        android:gravity="center"
                        android:src="@mipmap/add"
                        android:background="@drawable/circle_darkgary_bg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/reduce"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:padding="@dimen/dp_10"
                        android:gravity="center"
                        android:src="@mipmap/reduce"
                        android:background="@drawable/circle_darkgary_bg"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/judge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/dui"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:padding="@dimen/dp_10"
                        android:gravity="center"
                        android:src="@mipmap/dui"
                        android:background="@drawable/circle_darkgary_bg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/cuo"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:padding="@dimen/dp_10"
                        android:gravity="center"
                        android:src="@mipmap/cuo"
                        android:background="@drawable/circle_darkgary_bg"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/holo_button_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答题时间"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time_30"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="30s"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
                <TextView
                    android:id="@+id/time_60"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="1分钟"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/green_fillet_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time_180"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="3分钟"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/holo_button_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖励荣誉分"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fen1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="1分"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
                <TextView
                    android:id="@+id/fen2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="2分"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fen3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="3分"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/green_fillet_bg"/>
                <TextView
                    android:id="@+id/fen4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="4分"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fen5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="5分"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
                <TextView
                    android:id="@+id/none"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="无"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/darkgray_bg"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/holo_button_normal"/>
            <TextView
                android:id="@+id/start_dt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center"
                android:text="开始答题"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_13"
                android:background="@drawable/green_bg"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
