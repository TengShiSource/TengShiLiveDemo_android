<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/livebgdark">
        <RelativeLayout
            android:id="@+id/jiankong_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/onlianmai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_10"
                android:background="@drawable/circle_bg_gray"
                android:src="@mipmap/onlianmai"/>
        </LinearLayout>
        <com.qm.qmclass.utils.RoundImageView
            android:id="@+id/jiankong_icon"
            app:roundHeight="@dimen/dp_20"
            app:roundWidth="@dimen/dp_20"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/lmtips"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:gravity="center"
            android:text="已连麦"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/b_white"
            android:background="@drawable/jk_green_lianmai"/>
        <TextView
            android:id="@+id/jiankongname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:text="李佳佳"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_11"/>

        <LinearLayout
            android:id="@+id/lianmai_tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:background="@mipmap/videotool"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jkguamai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/guamai"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jkquanping"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/quanping"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/laliu_tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:background="@mipmap/videotool"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lianmai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/videolist"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shangketixing"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/green_sktx"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_shangketixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课提醒"
                android:textColor="@color/textGreen"
                android:textSize="@dimen/sp_11"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quxiaolm"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/green_sktx"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/textGreen"
                android:textSize="@dimen/sp_11"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>