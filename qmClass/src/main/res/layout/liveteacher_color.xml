<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/popupwindow_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/penstyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_5"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/xian"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/quxian"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/quxian" />
            <ImageView
                android:id="@+id/zhixian"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/zhixian"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/xingzhuang"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <GridView
                android:id="@+id/xzgridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="@dimen/dp_30"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="10dp"
                android:numColumns="2"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toLeftOf="@+id/color"
        android:background="@color/holo_button_normal"/>
    <RelativeLayout
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/penstyle">
        <LinearLayout
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5">
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_10"
                android:minHeight="@dimen/dp_7"
                android:maxHeight="@dimen/dp_7"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/seekbar_horizontal"
                android:thumb="@drawable/seekbar_thumb"/>
            <TextView
                android:id="@+id/progress"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_9"
                android:gravity="center"
                android:background="@mipmap/qipao"
                android:text="200"/>
        </LinearLayout>
        <GridView
            android:id="@+id/gridView"
            android:layout_below="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:columnWidth="0dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="10dp"
            android:numColumns="4"/>
    </RelativeLayout>
</RelativeLayout>
