<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/livebg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点名"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"/>
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@mipmap/close"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/holo_button_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请学生在以下时间内完成点名"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择点名时长"
            android:textColor="@color/text_color_sub_info"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">
        <TextView
            android:id="@+id/time_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:text="30s"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/darkgray_bg"/>
        <TextView
            android:id="@+id/time_60"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:text="1分钟"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/green_fillet_bg"/>
        <TextView
            android:id="@+id/time_180"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:text="3分钟"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/darkgray_bg"/>
    </LinearLayout>
    <TextView
        android:id="@+id/start_dm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center"
        android:text="开始点名"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_13"
        android:background="@drawable/green_bg"/>
</LinearLayout>
