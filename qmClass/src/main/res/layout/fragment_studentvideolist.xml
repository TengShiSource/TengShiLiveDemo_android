<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85"
        android:background="@color/livecolorBack">
        <RelativeLayout
            android:id="@+id/teacher_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/livebgdark"
            android:layout_centerInParent="true">

        </RelativeLayout>
        <com.qm.qmclass.utils.RoundImageView
            android:id="@+id/teacher_icon"
            app:roundHeight="@dimen/dp_20"
            app:roundWidth="@dimen/dp_20"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/teachername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:text="李佳佳"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_11"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85"
        android:layout_marginTop="5dp"
        android:background="@color/livecolorBack">
        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/myself_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
        <com.qm.qmclass.utils.RoundImageView
            android:id="@+id/myself_icon"
            app:roundHeight="@dimen/dp_20"
            app:roundWidth="@dimen/dp_20"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/myselfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:text="李佳佳"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_11"/>
        <RelativeLayout
            android:id="@+id/rl_tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@mipmap/videotool"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/shouqi"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/video_right_bg">
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/fanyeright"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shouqi"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/myself_shexiangtou"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_shexiangtou"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/shexiangtou"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/myself_lianmai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_lianmai"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/videolist"/>
                </LinearLayout>
<!--                <LinearLayout-->
<!--                    android:id="@+id/myself_maike"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:gravity="center"-->
<!--                    android:visibility="gone">-->
<!--                    <ImageView-->
<!--                        android:id="@+id/iv_maike"-->
<!--                        android:layout_width="@dimen/dp_18"-->
<!--                        android:layout_height="@dimen/dp_18"-->
<!--                        android:src="@mipmap/maike"/>-->
<!--                </LinearLayout>-->
                <LinearLayout
                    android:id="@+id/myself_qiehuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/qiehuan"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
            <LinearLayout
                android:id="@+id/classmate_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
    </ScrollView>

</LinearLayout>