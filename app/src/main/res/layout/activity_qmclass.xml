<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:padding="@dimen/dp_10"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/userId"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/sp_12"
           android:text="123456"/>
       <TextView
           android:id="@+id/name"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dp_10"
           android:textSize="@dimen/sp_12"
           android:text="(昵称：启明测试)"/>
       <ImageView
           android:id="@+id/share"
           android:layout_width="@dimen/dp_20"
           android:layout_height="@dimen/dp_20"
           android:src="@mipmap/demoshare"/>
       <ImageView
           android:id="@+id/set"
           android:layout_width="@dimen/dp_20"
           android:layout_height="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_20"
           android:src="@mipmap/demoset"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_80"
        android:orientation="vertical">
        <com.qm.qmdemo.utils.RoundImageView
            android:id="@+id/demo_icon"
            app:roundHeight="@dimen/dp_35"
            app:roundWidth="@dimen/dp_35"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/ic_new"/>
        <TextView
            android:id="@+id/demoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_25"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/b_black"
            android:text="启明课堂"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/tradio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="教师" />
            <RadioButton
                android:id="@+id/sradio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="学生" />
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:id="@+id/roomid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_edittext"
        android:layout_toRightOf="@+id/tv_room"
        android:textSize="@dimen/sp_13"
        android:padding="@dimen/dp_10"
        android:maxLength="8"
        android:layout_marginTop="@dimen/dp_10"
        android:inputType="number"
        android:hint="请输入课堂编号" />
    <LinearLayout
        android:id="@+id/classBegins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/courseName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="启明课堂"/>
        <TextView
            android:id="@+id/courseStatus"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_20"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/textGreen"
            android:gravity="center"
            android:background="@drawable/bg_green"
            android:text="上课中"/>
    </LinearLayout>
    <EditText
        android:id="@+id/teacherPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_edittext"
        android:layout_toRightOf="@+id/tv_room"
        android:textSize="@dimen/sp_13"
        android:padding="@dimen/dp_10"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="请输入教师密码" />
    <LinearLayout
        android:id="@+id/teacher_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/teacher_establish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:background="@drawable/bg_edittext_focused"
            android:textColor="@color/textGreen"
            android:text="创建课堂"/>
        <TextView
            android:id="@+id/teacher_join"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/b_white"
            android:background="@drawable/green_track"
            android:text="进入课堂"/>
    </LinearLayout>
    <EditText
        android:id="@+id/studentPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_edittext"
        android:layout_toRightOf="@+id/tv_room"
        android:textSize="@dimen/sp_13"
        android:padding="@dimen/dp_10"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="请输入学生密码" />
    <LinearLayout
        android:id="@+id/student_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:textColor="@color/b_white"
            android:background="@drawable/green_track"
            android:text="进入课堂"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/historyCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="查看历史课程"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/rightback"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.qm.qmclass.utils.ResizableImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ivbottom"/>
</LinearLayout>