<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/livebg"
    tools:context=".activitys.StudentLiveActivity">
    <FrameLayout
        android:id="@+id/ll_broadcast"
        android:layout_toLeftOf="@+id/ll_videolist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/livecolorBack"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/liveiv"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ketang"/>
        </LinearLayout>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/rl_videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ll_videolist"
        android:layout_centerInParent="true"
        android:background="@color/livecolorBack"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/liveiv"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ketang"/>
        </LinearLayout>
        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ll_videolist"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_13" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_classtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGreen"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:text="05:35"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp_6"
                android:src="@mipmap/liaotian" />
            <ImageView
                android:id="@+id/iv_jushou"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp_6"
                android:src="@mipmap/jushou" />
<!--            <ImageView-->
<!--                android:id="@+id/iv_jinyan"-->
<!--                android:layout_width="@dimen/dp_30"-->
<!--                android:layout_height="@dimen/dp_30"-->
<!--                android:layout_marginRight="@dimen/dp_3"-->
<!--                android:layout_marginLeft="@dimen/dp_3"-->
<!--                android:background="@drawable/circle_bg"-->
<!--                android:padding="@dimen/dp_6"-->
<!--                android:src="@mipmap/jinyan" />-->
            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp_6"
                android:src="@mipmap/question" />
<!--            <ImageView-->
<!--                android:id="@+id/iv_hudong"-->
<!--                android:layout_width="@dimen/dp_30"-->
<!--                android:layout_height="@dimen/dp_30"-->
<!--                android:layout_marginRight="@dimen/dp_3"-->
<!--                android:layout_marginLeft="@dimen/dp_3"-->
<!--                android:background="@drawable/circle_bg"-->
<!--                android:padding="@dimen/dp_6"-->
<!--                android:src="@mipmap/hudong" />-->
            <ImageView
                android:id="@+id/iv_set"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp_6"
                android:src="@mipmap/set" />
            <ImageView
                android:id="@+id/iv_classover"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@drawable/circle_bg"
                android:padding="@dimen/dp_6"
                android:src="@mipmap/tuichu" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_danmu"
        android:layout_width="@dimen/dp_235"
        android:layout_height="@dimen/dp_150"
        android:layout_above="@+id/gongju"
        android:layout_marginBottom="@dimen/dp_2"
        android:visibility="gone">
        <ListView
            android:id="@+id/danmulistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            android:listSelector="@android:color/transparent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gongju"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ll_videolist"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_danmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone">
            <EditText
                android:id="@+id/danmu_input"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_35"
                android:textSize="11dp"
                android:background="@drawable/bg_danmu_edit"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:padding="8dp"
                android:imeOptions="actionSend"
                android:singleLine="true"
                android:hint="开始和大家互动吧~" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tools"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@drawable/tools_dg"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_chehui"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@mipmap/chehui"/>
            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@mipmap/color"/>
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_19"
                android:textColor="@color/colorWhite"
                android:text="25"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_huabi"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/huabi"/>
                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:src="@mipmap/tool_jiantou"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_videolist"
        android:layout_width="@dimen/dp_150"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_4">
        <!--        <com.qm.module.common.utils.AutoPollRecyclerView-->
        <!--            android:id="@+id/rv_video"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:background="@color/colorWhite"/>-->
        <FrameLayout
            android:id="@+id/fl_frament"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_videolist"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/videolist"/>
                <ImageView
                    android:id="@+id/iv_studentlist"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/studentlist"/>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>