<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/livebg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="红包"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13"/>
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@mipmap/close"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/holo_button_normal"/>
    <LinearLayout
        android:id="@+id/ll_rushRedEnvelope"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="争分夺秒  名列前茅"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textGreen"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:id="@+id/tv_rushRedEnvelope"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:padding="@dimen/dp_20"
            android:text="抢"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_30"
            android:background="@drawable/circle_green_bg"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.qm.qmclass.utils.ResizableImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/redenvelope"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_rushRedResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="visible">
        <com.qm.qmclass.utils.RoundImageView
            android:id="@+id/rushRed_icon"
            app:roundHeight="@dimen/dp_35"
            app:roundWidth="@dimen/dp_35"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/red"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/fromsomeone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/b_white"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_sub_info"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/quota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/textGreen"
                    android:textSize="@dimen/sp_25" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="币"
                    android:textColor="@color/textGreen"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
            <TextView
                android:id="@+id/successtips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_sub_info"
                android:textSize="@dimen/sp_11"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手慢了，红包派发完了"
            android:textColor="@color/text_color_sub_info"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"/>

    </LinearLayout>
</LinearLayout>
